<form style="width:500px;margin: 100px auto;text-align:center">
    <h1>Edit post</h1>
    <div style="max-width:fit-content;margin:10px;display:flex;justify-content:space-between;align-items:center">
        <label for="title" style="margin-right:10px;">Title :</label>
        {{input type="text"  id="title" placeholder="Enter edit title.." value=model.title}}
    </div>
    <div style="max-width:fit-content;margin:10px;display:flex;align-items:center">
        <label for="content" style="margin-right:10px;">Post :</label>
        {{textarea  id="content" cols="40" rows="3" placeholder="Enter Edit content.." value=model.body}}
    </div>
     <div style="max-width:fit-content;margin:10px;display:flex;justify-content:space-between;align-items:center">
        <label for="name" style="margin-right:10px;">Author Name :</label>
        {{input type="text"  id="name" placeholder="Enter Author name.." value=model.name}}
    </div>
    <div style="max-width:fit-content;margin:10px;display:flex;justify-content:space-between;align-items:center">
        <label for="tel" style="margin-right:10px;">Phone Number :</label>
        {{input type="text"  id="tel" placeholder="Enter Phone  number.." value=model.phoneNumber}}
    </div>
    <button type="submit" onclick={{action "editPost"}} >Edit</button>
</form>